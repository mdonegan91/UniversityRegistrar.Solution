@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Tag

<h2>Add a student</h2>

<h4>Add a student to this tag: @Html.DisplayFor(model => model.Title)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.TagId)

    @Html.Label("Select student")
    @Html.DropDownList("StudentId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>