@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;

<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>No students have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Student student in Model)
    {
      <li>@Html.ActionLink($"{student.Name}", "Details", new { id = student.StudentId }) | @Html.ActionLink($"{student.Course.Description}", "Details", "Courses", new { id = student.Course.CourseId})</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new student", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>